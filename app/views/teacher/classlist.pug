extends main.pug 

//-
  zde: 
    hlavní stránka učitele
    seznam tříd

append vars
  - const title = "Moje třídy"

append content
  unless (data) 
    h3(class="error") Došlo k chybě
  if (data)
    ul(class="tileMenu list") 
      each schClass in data
        li 
          if schClass.lockTime 
            - date = new Date(schClass.lockTime)
            - lockFormat = "| Zamknuto do: " + date.getDate() + "." + date.getMonth() + "." + date.getFullYear() + ", " + date.getHours() + ":" + date.getMinutes() + " | Počet děl: " + schClass.lockCount
          a(href="/teacher/class/"+schClass.id+"?cname="+schClass.name class="mainItem ghover") #{schClass.name} #{lockFormat}
          if schClass.lockTime
            a(href="" class="fa-solid fa-lock" title="Odemknout výběr")
          else 
            a(href="" class="fa-solid fa-lock-open" title="Uzamknout výběr")
